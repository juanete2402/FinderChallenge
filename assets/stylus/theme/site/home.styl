// Estilos

// cabecera
.cabecera
	padding 1em 0
	margin-bottom 2em
	background-color lighten(black, 97)
	border-bottom 1px solid lighten(black, 90)
	position fixed
	width 100%
	top 0
	left 0
	z-index 1
	&__logo
		margin-bottom .5em
		+jnt-desde(pc)
			margin-bottom 0
		a
			font-weight 700
			color $link
			font-size 25px
			transition .3s
			&:hover
				color $sec
	&__formulario
		input, a
			display inline-block
			vertical-align middle
		.txt, .submit
			font-family $open
			font-size 16px
			box-sizing border-box
			transition .3s
		.txt
			padding .5em
			width 100%
			border 1px solid lighten(black, 80)
			&:focus
				outline none
				border 1px solid $sec
		.submit
			border none
			padding .58em 1em
			color white
			background-color $link
			cursor pointer
			&:hover
				background-color $sec
			&[disabled="disabled"]
				background-color lighten(black, 80)
				cursor not-allowed
		.guardar-busqueda
			color $link
			text-decoration underline
			transition .3s
			margin-top .5em
			+jnt-desde(tablet)
				margin-top 0
				margin-left 1em
			&:hover
				color black
				text-decoration none

// contenido
.contenido
	margin-top 11em
	+jnt-desde(pc)
		margin-top 7em

// sidebar
.sidebar
	margin-top 1em
	&__bloque
		margin-bottom 2em
	&__titulo
		font-weight 700
		font-size 1.15em
	&__lista
		padding-left 1.75em
		margin-top .5em
		li
			padding-left .5em
			a
				font-size .9em
				color $link
				text-decoration underline
				transition .3s
				&:hover
					color black
					text-decoration none
				&.activo
					color black
					text-decoration none
		&.busqueda
			li
				transition .3s
				&:hover
					background-color lighten($link, 55)
					.sidebar__opciones
						transform scale(1)
	&__opciones
		transform scale(0)
		transition .3s
		li
			display inline-block
			font-size .9em


// resultados
.resultados
	&__item
		margin-bottom 3.5em
	&__img
		display block
		width 80%
		margin-bottom .5em
		+jnt-desde(pc)
			width 70%
	&__titulo
		font-weight 700
		font-size 1.25em
		margin-bottom .25em
	&__descripcion
		line-height 150%
		
// paginacion
.paginacion
	text-align right
	li
		display inline-block
		a
			color $link
			text-decoration underline
			transition .3s
			&:hover
				text-decoration none
				color black


// otros
.awesomplete
	display inline-block
	width 70%
	+jnt-desde(tablet)
		width 65%
	+jnt-desde(pc)
		width 50%